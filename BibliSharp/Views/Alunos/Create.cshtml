@model BibliSharp.DbModels.Aluno

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar Novo</h1>

<h4 class="livro-edit">Aluno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
